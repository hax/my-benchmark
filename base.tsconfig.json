// See https://github.com/hax/dotfiles/tree/master/src/tsconfig.yaml for full edition
{
	"compilerOptions": {
		"strict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"esnext"
		],
		"preserveSymlinks": true,
		"declaration": true,
		"sourceMap": true,
		"inlineSources": true,
		"target": "es2017",
		"module": "es2015",
		"downlevelIteration": true,
		"pretty": true
	}
}
